<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.agendadezembrosimple.agendajava.fotografar.RelacionarImagem">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro Visual da Atividade"
            android:textAlignment="center"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo"
            android:textAlignment="center"
            app:srcCompat="@mipmap/ic_launcher"
            />

        <Button
            android:layout_below="@id/image"
            android:id="@+id/desde_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fazer Foto"
            android:textAlignment="center"
            android:onClick="foto_desde_camara"
            />

        <Button
            android:layout_below="@id/desde_camera"
            android:id="@+id/desde_galeria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pegar da Galeria"
            android:textAlignment="center"
            />

    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
